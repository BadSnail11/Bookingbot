
# === Telegram tokens ===
# Main bot token (handles user flow)
TELEGRAM_BOT_TOKEN=123456:REPLACE_ME
# Optional: comma-separated admin Telegram user IDs (numbers) for in-bot admin commands
ADMIN_IDS=123456789

# === Admin alert via a separate bot ===
# If set, every new booking request will be sent to these chats using this *other* bot.
ADMIN_ALERT_BOT_TOKEN=000000:REPLACE_ME_ADMIN_ALERT
# Comma-separated chat IDs (users, groups, or channels) to receive admin alerts
ADMIN_ALERT_CHAT_IDS=11111111,22222222

# === Venue contacts shown to users ===
VENUE_NAME=QRS Demo Bar
VENUE_PHONE=+48 123 456 789
VENUE_ADDRESS=Kraków, ul. Dobra 5
VENUE_HOURS=PN-CZW 16:00–23:00 (ostatnia rezerwacja 22:30), PT 16:00–00:00 (23:30), SB 14:00–00:00 (23:30), ND 14:00–23:00 (22:30)

# === Booking rules ===
LOCAL_TZ=Europe/Berlin
RESERVATION_DURATION_MIN=120
TIME_SLOT_STEP_MIN=30
# Minimal advance days to allow booking: 1 = "день в день не бронируется"
MIN_ADVANCE_DAYS=1
# If true, allow booking only for "завтра" (exactly next day); otherwise any future date >= MIN_ADVANCE_DAYS
ONLY_TOMORROW=false
# Reminder hours before reservation start (default 2 hours)
REMINDER_HOURS_BEFORE=2

# === Supabase (use instead of SQLite) ===
SUPABASE_URL=https://YOUR-PROJECT.supabase.co
SUPABASE_API_KEY=YOUR_ANON_OR_SERVICE_KEY
